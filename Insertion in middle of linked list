class ListNode:
    def __init__(self, val=0, next=None):
        self.val = val
        self.next = next

def insert_in_middle(head, x):
    new_node = ListNode(x)
    
    
    if head is None:
        return new_node
    
    
    count = 0
    current = head
    while current:
        count += 1
        current = current.next
    
    
    mid = count // 2
    
    
    current = head
    for _ in range(mid - 1):
        current = current.next
    
    
    new_node.next = current.next
    current.next = new_node
    
    return head
